{% extends 'base.html.twig' %}

{% block CTA %}

{% endblock %}

{% block body %}
    <h1>Berichte erstellen</h1>
    <div class="card card-body">
        <div class="row">
            <div class="col-lg-3 mt-2">
                <h4>Verarbeitungstätigkeiten (VVT)</h4>

                <a class="btn bg-vvt btn-block mb-1" href="{{ path('bericht_vvt') }}">
                    <span>PDF von allen VVTs erstellen</span>
                </a>
                <a class="btn bg-vvt btn-block" href="{{ path('bericht_vvt', {'all':1}) }}">
                    <span>PDF von allen VVTs inkl. Historie erstellen</span>
                </a>
            </div>


            <div class="col-lg-3 mt-2">
                <h4>Datenweitergaben (DW)</h4>
                <a class="btn bg-daten btn-block mb-1" href="{{ path('bericht_weitergabe', {'art':1}) }}">
                    <span>PDF von allen DWs erstellen</span>
                </a>
                <a class="btn bg-daten btn-block" href="{{ path('bericht_weitergabe', {'all':1, 'art':1}) }}">
                    <span>PDF von allen DWs inkl. Historie erstellen</span>
                </a>
            </div>


            <div class="col-lg-3 mt-2">
                <h4>Auftragsverarbeitung (AV)</h4>
                <a class="btn bg-av btn-block mb-1" href="{{ path('bericht_weitergabe', {'art':2}) }}">
                    <span>PDF von allen AVVs erstellen</span>
                </a>
                <a class="btn bg-av btn-block" href="{{ path('bericht_weitergabe', {'all':1, 'art':2}) }}">
                    <span>PDF von allen AVVs inkl. Historie erstellen</span>
                </a>
            </div>


            <div class="col-lg-3 mt-2">
                <h4>Auditfragen</h4>
                <a class="btn bg-audit btn-block mb-1" href="{{ path('bericht_audit') }}"
                   title="Exportieren Sie Ihre aktuelle Auditfragen">
                    <span>PDF von allen Auditfragen erstellen</span>
                </a>
                <a class="btn bg-audit btn-block mb-1" href="{{ path('bericht_audit', {'all':1}) }}"
                   title="Exportieren Sie Ihre aktuelle Auditfragen zusammen mit allen Revisionen">
                    <span>PDF von allen Auditfragen inkl. Historie erstellen</span>
                </a>
                <a class="btn bg-audit btn-block mb-1" href="{{ path('bericht_audit', {'activ':1}) }}"
                   title="Exportieren Sie Ihre aktuelle und relevanten (nicht unbearbetiet, nicht zutreffend) Auditfragen">
                    <span>Alle relevanten Auditfragen exportieren</span>
                </a>
                <a class="btn bg-audit btn-block mb-1" href="{{ path('bericht_audit', {'open':1}) }}"
                   title="Exportieren Sie Ihre aktuelle und unbearbetieten Auditfragen">
                    <span>Alle unbearbeiteten Auditfragen exportieren</span>
                </a>
            </div>

            <div class="col-lg-3 mt-2">
                <h4>TOM</h4>
                <a class="btn bg-tom btn-block" href="{{ path('bericht_global_tom') }}"
                   title="Exportieren Sie Ihre aktuelle technischen und organisatorischen Maßnahmen">
                    <span>Allgemeine Globale TOM erstellen</span>
                </a>
                <a class="btn bg-tom btn-block" href="{{ path('bericht_tom') }}"
                   title="Exportieren Sie Ihre aktuelle technischen und organisatorischen Maßnahmen für alle Verabreitungen">
                    <span>Alle TOMs erstellen</span>
                </a>
            </div>

            <div class="col-lg-3 mt-2">
                <h4>Datenschutzvorfälle</h4>
                <a class="btn btn-block bg-vorfall" href="{{ path('bericht_vorfall') }}"
                   title="Exportieren Sie alle Datenschutzvorfälle">
                    <span>Alle Datenschutzvorfälle exportieren</span>
                </a>
                <a class="btn btn-block bg-vorfall" href="{{ path('bericht_vorfall', {'all':1}) }}"
                   title="Exportieren Sie alle Datenschutzvorfälle mit allen Änderungen">
                    <span>Alle Datenschutzvorfälle mit Historie exportieren</span>
                </a>
            </div>

            <div class="col-lg-3 mt-2">
                <h4>Software</h4>
                <a class="btn btn-block bg-software" href="{{ path('bericht_software') }}"
                   title="Exportieren Sie alle Anwenungen und Konfigurationen">
                    <span>Alle Anwendungen exportieren</span>
                </a>
                <a class="btn btn-block bg-software" href="{{ path('bericht_software', {'all':1}) }}"
                   title="Exportieren Sie alle Anwendungen mit allen Änderungen">
                    <span>Alle Anwendungen mit Historie exportieren</span>
                </a>
                <a class="btn btn-block bg-software" href="{{ path('bericht_backupconcept') }}"
                   title="Exportieren Sie das Archivierungskonzept von allen Anwendungen">
                    <span>Archivierungskonzept exportieren</span>
                </a>
                <a class="btn btn-block bg-software" href="{{ path('bericht_recoveryconcept') }}"
                   title="Exportieren Sie das Archivierungskonzept von allen Anwendungen">
                    <span>Recoverykonzept exportieren</span>
                </a>
            </div>

            {% if app.user.adminUser %}
                <div class="col-lg-3 mt-2">
                    <h4>Akademie</h4>
                    <a class="btn btn-block bg-akademie mb-1" href="{{ path('bericht_akademie') }}">
                        <span>Alle bis jetzt abgeschlossenen Buchungen</span>
                    </a>
                </div>
            {% endif %}

            <div class="col-lg-3 mt-2">
                <h4>Datenschutzrichtlinien</h4>
                <a class="btn btn-block bg-policy mb-1" href="{{ path('bericht_policy') }}">
                    <span>Alle Richtlinien exportieren</span>
                </a>
            </div>

            <div class="col-lg-3 mt-2">
                <h4>Kundenanfragen</h4>
                <a class="btn btn-block bg-request mb-1" href="{{ path('bericht_request') }}">
                    <span>Alle Anfragen exportieren</span>
                </a>
            </div>

            <div class="col-lg-3 mt-2">
                <h4>Tätigkeitsbericht</h4>
                <a class="btn btn-block bg-request mb-1 loadContent"
                   href="{{ path('bericht_reports', {'team':currentTeam.id}) }}">
                    <span>Tätigkeitsbericht erstellen</span>
                </a>
            </div>

           <div class="col-lg-3 mt-2">
                <h4>Löschkonzepte</h4>

                <a class="btn btn-block orange mb-1" href="{{ path('bericht_loeschkonzept') }}">
                    <span>PDF von allen Löschkonzepten erstellen</span>
                </a>
                <a class="btn btn-block orange mb-1" href="{{ path('bericht_loeschkonzept', {'all':1}) }}">
                    <span>PDF von allen Löschkonzepten inkl. Historie erstellen</span>
                </a>
            </div>


        </div>
    </div>
    {{ include('base/__snack.html.twig') }}
{% endblock %}