{% extends 'base.html.twig' %}

{% block CTA %}
    {% if currentTeam.slug %}
        <a class="btn btn-primary ml-1 btn-sm" href="{{ path('client_new',{'slug':team.slug}) }}">
            <span>Neues Anfrage anlegen</span>
        </a>
        <a class="btn btn-secondary ml-1 btn-sm" target="_blank" href="{{ path('client_index',{'slug':team.slug}) }}">
            <span>Kundenportal</span>
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">Alle Anfragen</h2>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">UID</th>
                    <th scope="col">Betreff</th>
                    <th scope="col">Datum</th>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Grund</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for a in client %}
                    <tr class="clickable-row" data-href='{{ path('client_requests_show',{'id':a.id}) }}'>
                        <th scope="row">{{ a.uuid }}</th>
                        <td>{{ a.title }}</td>
                        <td>{{ a.createdAt|date('d.m.Y') }}</td>
                        <td>{{ a.email }}</td>
                        <td>{{ a.name }}</td>
                        <td>{{ a.itemString }}</td>
                        <td>{{ a.activ?'Aktiv':'Archiviert' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
