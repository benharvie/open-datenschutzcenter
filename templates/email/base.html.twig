{% apply inky_to_html|inline_css(source('@css/foundation-emails.css')) %}
    <style type="text/css">
        body,
        html,
        .body {
            background: #f3f3f3 !important;
        }

        .container.header {
            background: #f3f3f3;
        }

        .body-border {
            border-top: 8px solid #ff002a;
        }
    </style>

    <spacer size="16"></spacer>

    <container class="header">
        <row>
            <columns>
                <h1 class="text-center">
                    {% block header %}


                    {% endblock %}
                </h1>

            </columns>
        </row>
    </container>

    <container class="body-border">
        <row>
            <columns>

                <spacer size="32"></spacer>

                <spacer size="16"></spacer>
                {% block content %}

                {% endblock %}
                <spacer size="16"></spacer>
                <p style="text-align: center">
                    {% if team is defined %}{{ team.signature|nl2br }}{% endif %}
                </p>
                <spacer size="16"></spacer>
                <p style="text-align: center">
                    <a href="{{ dataPrivacy }}">Datenschutzhinweis</a><br>
                    {% if team is defined and team is not null %}
                        {% trans %}Diese Mail wurde Ihnen gesendet im Auftrag von:{% endtrans %}<br>
                        {{ team.displayName }} - {{ team.strasse }}, {{ team.plz }} {{ team.stadt }}
                    {% endif %}
                </p>

            </columns>
        </row>
        <center>
            <small>
                <a href="https://open-datenschutzcenter.de">Powered by Open Datenschutzcenter</a>
            </small>
        </center>

    </container>
{% endapply %}
